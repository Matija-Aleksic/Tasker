    <fx:include source="MenuBar.fxml" />

    <GridPane prefHeight="700.0" prefWidth="1000.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
